<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="aryan.com.mykitapp.Dashboard">
<TableRow
    android:id="@+id/table_row1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="53dp">
    <ImageView
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:src="@drawable/attendance"
        android:background="#ea8080"
        android:contentDescription="@string/contentDescription"
        android:clickable="true"
        android:focusable="true"
        android:onClick="attendance"
        android:padding="10dp"
        android:layout_marginStart="10dp"/>
    <ImageView
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:src="@drawable/timetable"
        android:background="#ea8080"
        android:contentDescription="@string/contentDescription"
        android:clickable="true"
        android:focusable="true"
        android:onClick="timetable"
        android:padding="10dp"
        android:layout_marginEnd="10dp"/>
</TableRow>
    <TableRow
        android:id="@+id/table_row2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:src="@drawable/academin_calender"
            android:background="#ea8080"
            android:contentDescription="@string/contentDescription"
            android:clickable="true"
            android:focusable="true"
            android:onClick="calender"/>
        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:src="@drawable/result"
            android:background="#ea8080"
            android:contentDescription="@string/contentDescription"
            android:clickable="true"
            android:focusable="true"
            android:onClick="result"/>
    </TableRow>
    <TableRow
        android:id="@+id/table_row3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:src="@drawable/gallery_image"
            android:background="#ea8080"
            android:contentDescription="@string/contentDescription"
            android:clickable="true"
            android:focusable="true"
            android:onClick="gallery"/>
        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:src="@drawable/subject"
            android:background="#ea8080"
            android:contentDescription="@string/contentDescription"
            android:clickable="true"
            android:focusable="true"
            android:onClick="Mysubjects"/>
    </TableRow>
    <TableRow
        android:id="@+id/table_row4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">
        <ImageView
            android:layout_width="175dp"
            android:layout_height="100dp"
            android:src="@drawable/placements"
            android:background="#ea8080"
            android:contentDescription="@string/contentDescription"
            android:clickable="true"
            android:focusable="true"
            android:onClick="placements"/>
            </TableRow>
</TableLayout>